#!/bin/sh

HAM=Mail/ham

if [ -s $HAM ]; then
   spamassassin -k -d --mbox $HAM > $HAM.cleaned
   rm $HAM
   touch $HAM
   sa-learn --mbox --ham $HAM.cleaned
fi

sa-learn --spam --mbox ~/Mail/spam ~/Mail/spam5
sa-learn --ham  --mbox /var/mail/ryand ~/Mail/Lists/* ~/Mail/Personal/* ~/Mail/Technical/*
