#!/usr/bin/ruby

name = `hostname -s`.chomp

extra = ARGV.dup
base = dirs = nil

flags  = ["-aCz"]
flags << "-vP" if $stdin.tty? and $stdout.tty?

case name
when "lust", "greed" then
  dirs = %w(Documents Work)
  base = File.expand_path "~"
when "envy" then
  dirs = %w(perforce www blogs)
  base = "/Users"
else
  abort "unknown machine #{name}"
end

Dir.chdir base

args = %W[find  ( -name .DS_Store -o -name *~ ) -print -delete]
args[1,0] = dirs
system(*args)

del = if extra.grep(/del/).empty? then
        "--del"
      else
        nil
      end

cmd = ["rsync", flags, del, extra,
       "--include", ".git",
       "--include", ".svn",

       "--exclude", "tmp",
       "--exclude", ".DS_Store",
       "--exclude", "*~",
       "--exclude", "pkg",
       "--exclude", ".ext",
       "--exclude", "*.build",
       "--exclude", "backups",
       "--exclude", "*.dbf", # maglev files
       "--exclude", "gauntlet\*.noindex\*",
       "--exclude", "\*.ofocus-backup",
       dirs,
       "rsync:backups/#{name}"].flatten.compact

warn cmd.join " "
system(*cmd)
