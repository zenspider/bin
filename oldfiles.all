#!/usr/bin/bash

com=${0##*/}			# save command name
tmp=/tmp/$com.$$

usage() {

  echo "Usage: $com"
}

if [ $# -gt 1 ]; then	# check num of arguments
  usage
  exit 1
fi

echo "Gathering data:"

IFS=:
for machine in $allMachines; do		# process multiple files

  echo "+ $machine"
  rsh $machine oldfiles >> $tmp

done

echo "Done gathering data. Now post-processing:"

cat $tmp | sort -rn

rm $tmp