# !/bin/csh
# cleans all backup, core, and zero-length files from personal dirs
# compresses all directories/files set in variable CLEANDIRS (set this
# in .cshrc file. It must be set for this script to work...

cd ~/

find ~/ \(			\
	-name "core"		\
	-o -size 0		\
	-o -name "*#*"		\
	-o -name "*~"		\
	-o -name ".*~"		\
	-o -name ".*.bak"	\
	-o -name ".*.old"	\
	-o -name "a.out*"	\
\)	 -exec rm -i {} \;

gzip -9r ~/private >& /dev/null
