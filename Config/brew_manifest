brew "rsync"                                       # file sync
brew "ripgrep"                                     # rg > ag ?

# NOTE: you must modify /usr/local/etc/aspell.conf
# NOTE: and set dict-dir to /Library/Application Support/cocoAspell/aspell*
cask "cocoaspell"                                  # emacs spellchecker

