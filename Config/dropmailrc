# -*- conf-unix -*-

logfile "$HOME/.mailfilter.log"

cc "Mail/backups"

if ($SIZE < 512000)
{
  dotlock "spamassassin.lock" {
    xfilter "spamassassin"
  }
}

if (/^X-Spam-Level: \*{10,}/)
  to "Mail/spam5"

if (/^X-Spam-Status: Yes/)
  to "Mail/spam"

if (/^List-Id: .*<([^.]+)/)
  to "Mail/Lists/$MATCH1"

if (/^X-ML-Name: (.+)/)
  to "Mail/Lists/$MATCH1"
