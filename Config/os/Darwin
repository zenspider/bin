# -*- sh -*-

add_os_path ~/.rbenv/bin
add_os_path ~/.rbenv/shims

add_os_path "/usr/local/sbin"
add_os_path "/usr/local/bin"
add_os_path "/sbin"
add_os_path "/usr/sbin"
add_os_path "/bin"
add_os_path "/usr/bin"

if [ -d /usr/X11R6 -a ! -e /usr/X11R6/bin/xstub ]; then
    add_os_path "/usr/X11R6/bin"
fi

if [ -d /MyApplications/dev/lisp/Racket/bin ]; then
    add_os_path "/MyApplications/dev/lisp/Racket/bin"
fi

# Removing PATH from this eval and adding it manually to force my ordering
eval "$(~/.rbenv/bin/rbenv init - --no-rehash | grep -v PATH)"

case $- in
  
  # interactive shell
  *i*)
       export LESS=-RFEm
       export MORE=$LESS
       alias disasm="otool -t -V"
       alias hfs_compress="afsctool -9c"
       alias emacs="/MyApplications/Emacs.app/Contents/MacOS/Emacs -nw"
       alias icloud="scutil --dns | grep icloud | sed -n 's/.* : *\(.*\)$/\1/p'"
       alias math="/MyApplications/Mathematica.app/Contents/MacOS/MathKernel"
       export COPYFILE_DISABLE=true
       ;;
  *)
     ;;
esac
