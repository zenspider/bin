*FvwmButtonsFore Black
*FvwmButtonsBack Grey80
*FvwmButtonsFont -adobe-helvetica-bold-r-*-*-10-*-*-*-*-*-*-*
# Geometry - really likes to pick its own size, but giving a position is OK
*FvwmButtonsGeometry -0-0
# Layout: specify rows or columns, not both
*FvwmButtonsRows 1

# Define the buttons to use.....

*FvwmButtons(Title xclock, Icon clock.xpm, \
             Swallow(UseOld) "xclock" 'Exec exec xclock -bg Grey80 -padding 0')
*FvwmButtons(1x1, Title load, \
             Swallow(UseOld) "xload" 'Exec exec xload \
                     -nolabel -bg grey80 -hl red -update 5')
*FvwmButtons(Title xterm, Icon rterm.xpm, \
             Action 'Exec "XTerm" xterm \
                     +cn -ls -sb -fn 8x13 -title "xterm" &')
#*FvwmButtons(Title Mom, Icon rterm.xpm, Action "Exec exec xterm +cn")
#*FvwmButtons(Title Zap, Icon rterm.xpm, Action "Exec exec xterm +cn -e rlogin zap")
*FvwmButtons(3x1, Swallow "FvwmPager" 'FvwmPager 0 2')
*FvwmButtons(8x1, Swallow "mini-term" "Exec exec xterm +cn -sb -ls -T mini-term -fg black  -bg Grey80")
*FvwmButtons(4x1, Swallow "mail-monitor" "Exec exec xterm +cn -T mail-monitor -fg black -bg Grey80 -e /home/ryand/Bin/monitorMail")
