# -*- sh -*-

. $CONFIG/misc/ruby

export BUILDKITE_API=$(git config buildkite.oauth-token)

export BREW_CASK_OPTS='--appdir=/MyApplications'
export HOMEBREW_NO_AUTO_UPDATE=1
export HOMEBREW_NO_SANDBOX=1
