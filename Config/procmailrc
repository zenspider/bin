PATH        = /usr/local/bin:/sbin:/bin
MAILDIR     = $HOME/Mail
LOGFILE     = $HOME/.procmail.log
PMDIR       = $HOME/.procmail
VERBOSE     = yes # Change to 'no' once you have it working
LOGABSTRACT = all
DELIVER     = /usr/local/libexec/dovecot/deliver
# DEFAULT     = $HOME/INBOX
# FORMAIL = /usr/local/bin/formail

:0 c:
Backups

:0fw: spamassassin.lock
* < 256000
| spamassassin

:0 w
* ^X-Spam-Level: .*\*{10,}
| ${DELIVER} -m spam3

:0 w
* ^X-Spam-Status: Yes
| ${DELIVER} -m spam2

:0 w
* ^List-Id:.*<\/[^.]+
| ${DELIVER} -m Lists/$MATCH

# default rule (last)
:0 w
| ${DELIVER}
