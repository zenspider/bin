# -*- conf-space -*-
Include config.local

Host *
  IdentityFile ~/.ssh/id_ed25519
  ForwardAgent yes
  CheckHostIP yes
  IgnoreUnknown UseKeychain,AddKeysToAgent
  UseKeychain yes
  AddKeysToAgent yes
  ControlMaster auto
  ControlPath ~/.ssh/master-%C
  ControlPersist 1h

Host e
  Hostname envy.local
  User ryan
  ControlMaster auto
  ControlPath ~/.ssh/master-%C

Host l
  Hostname lust.zenspider.com
  User ryan

