# -*- conf-space -*-

Host *
  IdentityFile ~/.ssh/id_rsa
  UseKeychain yes
  AddKeysToAgent yes
  ForwardAgent yes
  CheckHostIP yes

Host g
	Hostname greed.zenspider.com
	User ryan
	ControlMaster auto
	ControlPath ~/.ssh/master-%C

Host w
	Hostname wrath.local
	User ryan
	ControlMaster auto
	ControlPath ~/.ssh/master-%C

Host l
	IdentityFile ~/.ssh/id_rsa
	Hostname lust.zenspider.com
	User root
	ControlMaster auto
	ControlPath ~/.ssh/master-%C

# tunnel to home personal laptop via server
Host gw
  HostName wrath.local
  ProxyCommand ssh -W %h:%p g

Host github.com
  IdentityFile ~/.ssh/passwordless

# password in keychain under sync.net
Host rsync
  Hostname usw-s004.rsync.net
  IdentityFile ~/.ssh/rsync.net
  User 4295
  ControlMaster auto
  ControlPath ~/.ssh/master-%C
  ControlPersist 1h

Host docs
  Hostname docs.seattlerb.org

Host drobo
  Hostname 10.0.1.99
  User root
