############################################################################
# FvwmForm
#
# FvwmForm alias - rlogin to host via xterm
# begin items
*RloginBack         Light Gray
*RloginButton       quit "Cancel"
*RloginButton       quit "Login" ^M
*RloginButton       restart   "Clear"
*RloginButtonFont   *helvetica*m*o*n*14*
*RloginChoice       Custom    Custom    off  "user:"
*RloginChoice       Default   Default   on   "same user"
*RloginCommand Beep
*RloginCommand Exec exec xterm +cn -T xterm@$(HostName) -e rlogin $(HostName) $(Custom?-l $(UserName))
*RloginCommand Nop
*RloginFont         *helvetica*m*r*n*14*
*RloginFore         Black
*RloginInput        HostName  20   ""
*RloginInput        UserName  10   ""
*RloginInputFont    *cour*m*r*n*14*
*RloginItemBack          Gray50
*RloginItemFore          Wheat
*RloginLine         center
*RloginLine         center
*RloginLine         center
*RloginLine         expand
*RloginSelection    UserSel   single
*RloginText         "Host:"
*RloginText         "Login to Remote Host"
*RloginWarpPointer
