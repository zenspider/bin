# FvwmForm alias - rlogin or telnet to host via rxvt
*RloginWarpPointer
*RloginFont         -adobe-courier-medium-r-*-*-14-*-*-*-*-*-*-*
*RloginButtonFont   -adobe-helvetica-medium-r-*-*-14-*-*-*-*-*-*-*
*RloginInputFont    -adobe-courier-medium-r-*-*-14-*-*-*-*-*-*-*
*RloginFore         Black
*RloginBack         Light Gray
*RloginItemFore          White
*RloginItemBack          Gray50
# begin items
*RloginLine         center
*RloginText         "Login to Remote Host"
*RloginLine	    left
*RloginText         "Host:"
*RloginInput        HostName  30   ""
*RloginLine         left
*RloginText         "User:"
*RloginInput        UserName  10   ""
*RloginLine         left
*RloginText         "Meth:"
*RloginSelection    meth single
*RloginChoice       TN TN off "telnet"
*RloginChoice       RL RL on "rlogin"
*RloginSelection    UserSel   single
*RloginLine         expand
*RloginButton       quit "Login" ^M
*RloginCommand Exec rxvt -e $(RL?rlogin) $(TN?telnet) $(HostName) $(RL?-8 $(UserName?-l $(UserName)))
*RloginButton       restart   "Clear"
*RloginCommand Beep
*RloginButton       quit "Cancel"
*RloginCommand Nop

# FvwmForm alias - query exit ala mwm
*QuitVerifyGrabServer
*QuitVerifyWarpPointer
*QuitVerifyFont          -adobe-helvetica-medium-r-*-*-14-*-*-*-*-*-*-*
*QuitVerifyButtonFont   -adobe-helvetica-medium-r-*-*-14-*-*-*-*-*-*-*
*QuitVerifyFore          Black
*QuitVerifyBack          Light Gray
*QuitVerifyItemFore Wheat
*QuitVerifyItemBack Gray50
# begin items
*QuitVerifyLine          center
*QuitVerifyText          "Do you really want to exit FVWM?"
*QuitVerifyLine          expand
*QuitVerifyButton   quit      " Exit "
*QuitVerifyCommand  Quit
*QuitVerifyButton   quit      "Cancel"
*QuitVerifyCommand  Nop

# MyTalk & MyFvwmTalk from Dave Goldberg
# MyTalk Form - dissappears after use
*MyTalkWarpPointer
*MyTalkFont -adobe-helvetica-medium-r-*-*-14-*-*-*-*-*-*-*
*MyTalkButtonFont -adobe-helvetica-medium-r-*-*-14-*-*-*-*-*-*-*
*MyTalkInputFont -adobe-courier-medium-r-*-*-14-*-*-*-*-*-*-*
*MyTalkFore Red
*MyTalkBack Gray
*MyTalkItemFore Blue
*MyTalkItemBack Gray
*MyTalkLine center
*MyTalkText "Fvwm Function"
*MyTalkInput Func 40 ""
*MyTalkLine expand
*MyTalkButton quit "Run" ^M
*MyTalkCommand $(Func)
*MyTalkButton restart "Clear" ^R
*MyTalkButton quit "Cancel" ^C
*MyTalkCommand Nop
# MyFvwmTalk Form - sticks around
*MyFvwmTalkWarpPointer
*MyFvwmTalkFont -adobe-helvetica-medium-r-*-*-14-*-*-*-*-*-*-*
*MyFvwmTalkButtonFont -adobe-helvetica-medium-r-*-*-14-*-*-*-*-*-*-*
*MyFvwmTalkInputFont -adobe-courier-medium-r-*-*-14-*-*-*-*-*-*-*
*MyFvwmTalkFore Red
*MyFvwmTalkBack Gray
*MyFvwmTalkItemFore Blue
*MyFvwmTalkItemBack Gray
*MyFvwmTalkLine center
*MyFvwmTalkText "Fvwm Function"
*MyFvwmTalkInput Func 40 ""
*MyFvwmTalkLine expand
*MyFvwmTalkButton restart "Run" ^M
*MyFvwmTalkCommand $(Func)
*MyFvwmTalkButton restart "Clear" ^R
*MyFvwmTalkCommand Nop
*MyFvwmTalkButton restart "Iconify" ^Z
*MyFvwmTalkCommand Next [MyFvwmTalk] Iconify
*MyFvwmTalkButton quit "Quit" ^C
*MyFvwmTalkCommand Nop

