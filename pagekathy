#!/bin/sh -- # -*- perl -*-
eval 'exec perl -w -S $0 ${1+"$@"}'
  if 0;

use strict;
use Mail::Mailer;

my $msg = join('', @ARGV) || 'Call me 206.694.2641';

my $mail = Mail::Mailer->new();
$mail->open(
	    {
	      From    => 'ryand@ZenSpider.com',
	      To      => '7938204@skytel.com',
	      Subject => $msg,
	    }
	    )
  or die "Can't open mail: $!\n";
print $mail '';
$mail->close();

print "Sent '$msg'\n";
